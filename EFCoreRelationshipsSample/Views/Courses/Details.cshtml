@model EFCoreRelationshipsSample.Models.CourseDetailsViewModel

@{
    ViewData["Title"] = "Course Details";
}

<h1>Course Details</h1>

<div>
    <h4>@Model.CourseTitle</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Course Title
        </dt>
        <dd class="col-sm-10">
            @Model.CourseTitle
        </dd>
        <dt class="col-sm-2">
            Credits
        </dt>
        <dd class="col-sm-10">
            @Model.Credits
        </dd>
    </dl>
</div>

<div class="mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4>Enrolled Students (@Model.EnrolledStudents.Count)</h4>
        @if (Model.AvailableStudents.Any())
        {
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addStudentModal">
                <i class="bi bi-plus-circle"></i> Add Student
            </button>
        }
    </div>
    
    @if (Model.EnrolledStudents.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Student Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var student in Model.EnrolledStudents)
                    {
                        <tr>
                            <td>@student.FullName</td>
                            <td>
                                <form asp-action="WithdrawStudent" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to withdraw @student.FullName from this course?');">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="courseId" value="@Model.Id" />
                                    <input type="hidden" name="studentId" value="@student.Id" />
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        <i class="bi bi-x-circle"></i> Withdraw
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No students are currently enrolled in this course.
        </div>
    }
</div>

<!-- Add Student Modal -->
<div class="modal fade" id="addStudentModal" tabindex="-1" aria-labelledby="addStudentModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addStudentModalLabel">Add Student to @Model.CourseTitle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @if (Model.AvailableStudents.Any())
                {
                    <div class="list-group">
                        @foreach (var student in Model.AvailableStudents)
                        {
                            <div class="list-group-item d-flex justify-content-between align-items-center">
                                <span>@student.FullName</span>
                                <form asp-action="AddStudent" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="courseId" value="@Model.Id" />
                                    <input type="hidden" name="studentId" value="@student.Id" />
                                    <button type="submit" class="btn btn-sm btn-success">
                                        <i class="bi bi-plus-circle"></i> Add
                                    </button>
                                </form>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted mb-0">All students are already enrolled in this course.</p>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary">Edit Course</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    <script>
        // Auto-close modal after adding a student (optional enhancement)
        document.querySelectorAll('#addStudentModal form').forEach(form => {
            form.addEventListener('submit', function() {
                // The form will submit and page will reload, so modal will close automatically
            });
        });
    </script>
}
